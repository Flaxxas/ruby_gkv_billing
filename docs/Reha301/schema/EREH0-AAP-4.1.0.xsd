<?xml version="1.0" encoding="ISO-8859-1"?>
<xs:schema xmlns="http://www.vdek.com/xml-schema/AAP/4.1" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:bty="http://www.vdek.com/xml-schema/BTY/4.1" targetNamespace="http://www.vdek.com/xml-schema/AAP/4.1" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:import namespace="http://www.vdek.com/xml-schema/BTY/4.1" schemaLocation="EREH0-BTY-4.1.0.xsd"/>
	<!--
:notation name="Admin-Datenblock"
_________________________________________________________________________________________________________________ -->
	<xs:complexType name="Admindaten_begrenzt_Ctp">
		<xs:sequence>
			<xs:element name="Verarbeitungskennzeichen">
				<xs:annotation>
					<xs:documentation>10 = Normalfall
20 = Änderung</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="bty:Verarbeitungskennzeichen_Stp">
						<xs:enumeration value="10"/>
						<xs:enumeration value="20"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="Version">
				<xs:annotation>
					<xs:documentation>Version des Geschäftsvorfalls</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="bty:Version_Stp">
						<xs:enumeration value="4.1.0"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="LfdNr" type="bty:laufende_Nummer_GVF_Stp">
				<xs:annotation>
					<xs:documentation>Laufende Nummer des Geschäftsvorfalls - Wertebereich von Lfd. Nr. ist abhängig vom jeweiligen Geschäftsvorfall, siehe SV</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<!--
:notation name="Geschäftsvorfall"
_________________________________________________________________________________________________________________ -->
	<xs:complexType name="Antwort_Antrag_Phasenwechsel_KV_Ctp">
		<xs:annotation>
			<xs:documentation>Antwort zum Antrag auf Phasenwechsel KV</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="Admindaten" type="Admindaten_begrenzt_Ctp"/>
			<xs:element name="Fachliche_Daten">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Rehabilitand" type="bty:Rehabilitand_alle_DS_Ctp"/>
						<xs:element name="Lebendspender" type="bty:Lebendspender_Ctp" minOccurs="0"/>
						<xs:element name="Information_Phasenwechsel">
							<xs:complexType>
								<xs:sequence>
									<xs:element name="Datum_Aenderung" type="bty:Datum_Stp"/>
									<xs:element name="Zustimmungskennzeichen" type="bty:Zustimmungskennzeichen_Stp"/>
									<xs:element name="Erlaeuterung" type="bty:Freier_Text_Stp" minOccurs="0">
										<xs:annotation>
											<xs:documentation>Erläuterung zu Änderungsdatum oder Zustimmungskennzeichen</xs:documentation>
										</xs:annotation>
									</xs:element>
									<xs:element name="Datum_Antwort_Phasenwechsel" type="bty:Datum_Stp">
										<xs:annotation>
											<xs:documentation>Bescheiddatum</xs:documentation>
										</xs:annotation>
									</xs:element>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
